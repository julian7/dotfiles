[alias]
	a = add
	aa = add --all
	st = status -sb
	ci = commit
	co = checkout
	di = diff
	dc = diff --cached
	unadd = reset HEAD
	br = branch
	man = help
    h = "!f() { git log --graph --abbrev-commit --pretty=format:\"%C(yellow)%h%Creset}%Cgreen(%ai)%Creset}%C(bold blue)<%an>%Creset}%C(red)%d%Creset}%s\" \"$@\" | sed -Ee \"s/ ([0-9]{2}:[0-9]{2}):[0-9]{2} \\\\+[0-9]{4}/ \\\\1/\" | column -s \"}\" -t | less -FXRS; }; f"
	fm = merge --no-ff
	fb = new-fb
	thaw = "!~/.githelpers thaw"
	freeze = "!~/.githelpers freeze"
	amend = commit --amend --no-edit
[core]
	excludesfile = ~/.gitignore
