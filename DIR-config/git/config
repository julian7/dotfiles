	tool = diffmerge
[difftool "filemerge"]
	cmd = /usr/bin/opendiff $LOCAL $REMOTE
[mergetool "gvim"]
	path = /usr/local/bin/mvim
[mergetool "gvimdiff"]
	path = /usr/local/bin/mvim
[mergetool]
	keepBackup = false
