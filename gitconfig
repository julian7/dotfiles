[alias]
	aa = add --all
	st = status -sb
	ci = commit
	co = checkout
	di = diff
	dc = diff --cached
	unadd = reset HEAD
	br = branch
	man = help
	ff = flow feature
	h = "!source ~/.githelpers && pretty_git_log"
	ffco = flow feature checkout
[core]
	excludesfile = ~/.gitignore
[gui]
	fontui = -family \"Lucida Grande\" -size 12 -weight normal -slant roman -underline 0 -overstrike 0
	fontdiff = -family Menlo -size 12 -weight normal -slant roman -underline 0 -overstrike 0
[mergetool "diffmerge"]
	cmd = /Applications/DiffMerge.app/Contents/MacOS/DiffMerge --merge -result=$MERGED $LOCAL $BASE $REMOTE
	trustExitCode = false
[merge]
	tool = diffmerge
[difftool "filemerge"]
	cmd = /usr/bin/opendiff $LOCAL $REMOTE
[mergetool "gvim"]
	path = /usr/local/bin/mvim
[mergetool "gvimdiff"]
	path = /usr/local/bin/mvim
[mergetool]
	keepBackup = false
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
